<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景の円 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00BCD4" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>

    <!-- 目（左） -->
    <item
        android:width="8dp"
        android:height="8dp"
        android:left="22dp"
        android:top="28dp">
        <shape android:shape="oval">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- 目（右） -->
    <item
        android:width="8dp"
        android:height="8dp"
        android:left="50dp"
        android:top="28dp">
        <shape android:shape="oval">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- 悲しい口 -->
    <item
        android:width="25dp"
        android:height="12dp"
        android:left="27dp"
        android:top="45dp">
        <rotate
            android:fromDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#000000" />
                <corners
                    android:bottomLeftRadius="12dp"
                    android:bottomRightRadius="12dp" />
            </shape>
        </rotate>
    </item>
</layer-list>