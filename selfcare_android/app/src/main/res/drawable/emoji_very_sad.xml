<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景の円 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#BA68C8" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>

    <!-- 閉じた目（左）上 -->
    <item
        android:width="12dp"
        android:height="3dp"
        android:left="20dp"
        android:top="28dp">
        <rotate
            android:fromDegrees="-20"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#000000" />
            </shape>
        </rotate>
    </item>

    <!-- 閉じた目（右）上 -->
    <item
        android:width="12dp"
        android:height="3dp"
        android:left="48dp"
        android:top="28dp">
        <rotate
            android:fromDegrees="20"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#000000" />
            </shape>
        </rotate>
    </item>

    <!-- 泣き顔 -->
    <item
        android:width="25dp"
        android:height="15dp"
        android:left="27dp"
        android:top="43dp">
        <rotate
            android:fromDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#000000" />
                <corners
                    android:bottomLeftRadius="15dp"
                    android:bottomRightRadius="15dp" />
            </shape>
        </rotate>
    </item>
</layer-list>