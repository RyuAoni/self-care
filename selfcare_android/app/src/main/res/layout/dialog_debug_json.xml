<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btnCloseDebug"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="#333333"
        app:layout_top_toTopOf="parent"
        app:layout_end_toEndOf="parent"
        android:contentDescription="閉じる" />

    <TextView
        android:id="@+id/tvTitleDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存データ (JSON)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_top_toTopOf="@id/btnCloseDebug"
        app:layout_bottom_toBottomOf="@id/btnCloseDebug"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#F5F5F5"
        android:padding="8dp"
        app:layout_top_toBottomOf="@id/btnCloseDebug"
        app:layout_bottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_end_toEndOf="parent">

        <TextView
            android:id="@+id/tvJsonContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{ ... }"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:textColor="#333333" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>