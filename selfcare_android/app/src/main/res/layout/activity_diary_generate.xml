<?xml version="1.0" encoding="utf-8"?>
<!-- 日記生成画面のレイアウトファイル -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ヘッダー（タイトルと閉じるボタン）-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <!-- 閉じるボタン -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="閉じる"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/black" />

        <!-- タイトル（例：12月3日の日記）-->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="12月3日の日記"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"

            android:layout_marginStart="64dp" android:layout_marginEnd="64dp"   />
    </RelativeLayout>

    <!-- 日記本文（スクロール対応） -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <EditText
            android:id="@+id/etDiaryContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:gravity="top|start"
            android:hint="今日の出来事を書く..."
            android:minHeight="200dp"
            android:padding="16dp"
            android:text="今日はシステム設計2の疑似調査レポートを提出した。汽車を乗り過ごして1時間待つ羽目になった。"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textMultiLine" />
    </ScrollView>

    <!-- 画像追加・編集ボタン -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="画像"
            android:src="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="編集"
            android:src="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <!-- 保存ボタン -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="#D3D3D3"
        android:paddingStart="48dp"
        android:paddingTop="12dp"
        android:paddingEnd="48dp"
        android:paddingBottom="12dp"
        android:text="保存"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- フッターの試し -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C5C8A4"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
