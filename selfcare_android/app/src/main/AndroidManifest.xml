<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Selfcare_android">

        <receiver
            android:name=".NotificationReceiver"
            android:exported="false" />

        <!-- 各Activityに個別設定 -->
        <activity
            android:name=".SettingsDetailActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".AlbumActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".WeeklyLetterActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".SettingsActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".DiaryGenerateActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".DiaryDetailActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".EmotionAnalysisActivity"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".CalendarActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DiaryInputActivity"
            android:exported="false"
            android:label="日記入力"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>